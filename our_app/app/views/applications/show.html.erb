<p id="notice"><%= notice %></p>
<% if student_signed_in? && ( (current_student.email == @application.Student_Email) || current_student.try(:admin)) %>
  <p>
    <strong>First name:</strong>
    <%= @application.First_Name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @application.Last_Name %>
  </p>

  <p>
    <strong>Middle name:</strong>
    <%= @application.Middle_Name %>
  </p>

  <p>
    <strong>Student email:</strong>
    <%= @application.Student_Email %>
  </p>

  <p>
    <strong>Phone number:</strong>
    <%= @application.Phone_Number %>
  </p>

  <p>
    <strong>Grading preference:</strong>
    <%= @application.Grading_Preference %>
  </p>

  <p>
    <strong>Start time:</strong>
    <%= @application.Start_Time %>
  </p>

  <p>
    <strong>End time:</strong>
    <%= @application.End_Time %>
  </p>

  <p>
    <strong>Days:</strong>
    <%= @application.Days %>
  </p>

  <%= link_to 'Edit', edit_application_path(@application) %> 

  <% if current_student.try(:admin?) %>
  <%= link_to 'Back', admin_interface_index_path %>
  <% end %>

<% else %>
  
  <%= render 'shared/auth_error' =%>

<% end %>